{% extends 'base.html.twig' %}

{% block title %}Articulo{% endblock %}

{% block body %}
    <h2>Descripción sobre articulo "{{ articulo.titulo }}"</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ articulo.id }}</td>
            </tr>
            <tr>
                <th>Título</th>
                <td>{{ articulo.titulo }}</td>
            </tr>
            <tr>
                <th>Contenido</th>
                <td>{{ articulo.contenido }}</td>
            </tr>
            <tr>
                <th>Fecha de creación</th>
                <td>{{ articulo.creationDate ? articulo.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Autor</th>
                <td>{{ articulo.usuario }}</td>
            </tr>
        </tbody>
    </table>

    <a class="link" href="{{ path('articulo_index') }}">Volver a la lista de articulos</a>

    <a class="link" href="{{ path('articulo_edit', {'id': articulo.id}) }}"> Editar</a>

    {{ include('articulo/_delete_form.html.twig') }}
{% endblock %}
