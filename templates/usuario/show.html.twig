{% extends 'base.html.twig' %}

{% block title %}Usuario{% endblock %}

{% block body %}
    <h2>Información sobre: {{ usuario.username }}</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ usuario.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ usuario.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ usuario.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ usuario.password }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ usuario.creationDate ? usuario.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="link" href="{{ path('usuario_index') }}">Volver a la lista de usuarios</a>

    <a class="link" href="{{ path('usuario_edit', {'id': usuario.id}) }}"> Editar</a>

    <a class="link" href="{{ path('show_articulos', {'id': usuario.id}) }}"> Ver todas las publicaciónes</a>


    {{ include('usuario/_delete_form.html.twig') }}
{% endblock %}
